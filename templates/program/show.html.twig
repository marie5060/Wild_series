{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
        {% for season in program.seasons %}
            <div class="row mx-auto">
                <div class="col-12 mt-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ season.id }} / {{season.number }}</h5>
                            <p class="card-text text-dark mb-5">{{ season.description }}</p>
                            <a href="{{ path("program_season_show", { season:season.id , program: program.id }) }}">Voir la fiche saison</a>

                         </div>
                    </div>
             </div>
            </div>
        {% else %}
            
            <h2>Aucune série trouvée.</h2>
        {% endfor %}


    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}